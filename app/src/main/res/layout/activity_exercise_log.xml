<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.fitawesome.ExerciseLog">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week1"
        android:textColor="@android:color/black"
        android:text="Week 1"
        android:onClick="onClick (ExerciseLog)"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week6"
        android:textColor="@android:color/black"
        android:text="Week 6"
        android:layout_below="@+id/btn_week5"
        android:layout_alignStart="@+id/btn_week5"
        android:layout_marginTop="17dp"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week2"
        android:textColor="@android:color/black"
        android:text="Week 2"
        android:onClick="onClick (ExerciseLog)"
        android:layout_below="@+id/btn_week1"
        android:layout_alignStart="@+id/btn_week1"
        android:layout_marginTop="11dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week3"
        android:textColor="@android:color/black"
        android:text="Week 3"
        android:onClick="onClick (ExerciseLog)"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btn_week2"
        android:layout_alignStart="@+id/btn_week2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week4"
        android:textColor="@android:color/black"
        android:text="Week 4"
        android:onClick="onClick (ExerciseLog)"
        android:layout_below="@+id/btn_week3"
        android:layout_alignStart="@+id/btn_week3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week5"
        android:textColor="@android:color/black"
        android:text="Week 5"
        android:onClick="onClick (ExerciseLog)"
        android:paddingBottom="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="5dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/btn_week4"
        android:layout_alignStart="@+id/btn_week4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week7"
        android:textColor="@android:color/black"
        android:text="Week 7"
        android:layout_alignBaseline="@+id/btn_week1"
        android:layout_alignBottom="@+id/btn_week1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week8"
        android:textColor="@android:color/black"
        android:text="Week 8"
        android:layout_above="@+id/btn_week3"
        android:layout_alignStart="@+id/btn_week7"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week10"
        android:textColor="@android:color/black"
        android:text="Week 10"
        android:layout_above="@+id/btn_week5"
        android:layout_alignStart="@+id/btn_week9"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week9"
        android:textColor="@android:color/black"
        android:text="Week 9"
        android:layout_above="@+id/btn_week10"
        android:layout_alignStart="@+id/btn_week8"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week11"
        android:textColor="@android:color/black"
        android:text="Week 11"
        android:layout_alignBaseline="@+id/btn_week5"
        android:layout_alignBottom="@+id/btn_week5"
        android:layout_alignStart="@+id/btn_week10"
        android:onClick="onClick (ExerciseLog)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_week12"
        android:textColor="@android:color/black"
        android:text="Week 12"
        android:layout_alignBaseline="@+id/btn_week6"
        android:layout_alignBottom="@+id/btn_week6"
        android:layout_alignStart="@+id/btn_week11"
        android:onClick="onClick (ExerciseLog)"/>
</RelativeLayout>

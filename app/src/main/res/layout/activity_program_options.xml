<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_program_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.fitawesome.programOptions">

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/LF_P2_btn"
        tools:text="Phase 2"
        android:layout_below="@+id/LF_P1_btn"
        android:layout_alignStart="@+id/LF_P1_btn"/>

    <Button
        android:id="@+id/SC2S_P3_btn"
        tools:text="Phase 3"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_below="@+id/SC2S_P2_btn"
        android:layout_alignStart="@+id/SC2S_P2_btn"/>

    <Button
        android:id="@+id/SC2S_P2_btn"
        tools:text="Phase 2"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_below="@+id/SC2S_P1_btn"
        android:layout_alignStart="@+id/SC2S_P1_btn"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/LF_P3_btn"
        tools:text="Phase 3"
        android:layout_below="@+id/LF_P2_btn"
        android:layout_alignStart="@+id/LF_P2_btn"/>

    <Button
        android:id="@+id/SC2S_btn"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        tools:text="Shortcut to Shred"
        android:layout_width="500dp"/>

    <Button
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:id="@+id/livfit_btn"
        tools:text="Live Fit"
        android:layout_below="@+id/SC2Sz_P3_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:id="@+id/SC2SZ_btn"
        tools:text="Shortcut to Size"
        android:layout_below="@+id/SC2S_P3_btn"
        android:layout_toEndOf="@+id/textView5"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/LF_P1_btn"
        tools:text="Phase 1"
        android:layout_below="@+id/livfit_btn"
        android:layout_alignStart="@+id/SC2Sz_P3_btn"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/SC2Sz_P3_btn"
        tools:text="Phase 3"
        android:layout_below="@+id/SC2Sz_P2_btn"
        android:layout_alignStart="@+id/SC2Sz_P2_btn"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/SC2Sz_P2_btn"
        tools:text="Phase 2"
        android:layout_below="@+id/SC2Sz_P1_btn"
        android:layout_alignStart="@+id/SC2Sz_P1_btn"/>

    <Button
        android:id="@+id/SC2S_P1_btn"
        tools:text="Phase 1"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_below="@+id/SC2S_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/SC2Sz_P1_btn"
        tools:text="Phase 1"
        android:layout_below="@+id/SC2SZ_btn"
        android:layout_alignStart="@+id/SC2S_P3_btn"/>

</RelativeLayout>

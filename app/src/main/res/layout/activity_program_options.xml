<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_program_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.fitawesome.programOptions">

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/button22"
        tools:text="Phase 2"
        android:layout_below="@+id/button21"
        android:layout_alignStart="@+id/button21"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/button18"
        tools:text="Phase 1"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/SC2Sz_P3_btn"
        tools:text="Phase 3"
        android:layout_below="@+id/SC2Sz_P2_btn"
        android:layout_alignStart="@+id/SC2Sz_P2_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="Short cut to shred"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        tools:text="Short cut to size"
        android:layout_below="@+id/SC2S_P3_btn"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SC2Sz_P3_btn"
        android:layout_alignStart="@+id/SC2S_P3_btn"
        android:layout_marginTop="12dp"
        android:id="@+id/textView5"
        tools:text="Live Fit "/>

    <Button
        android:id="@+id/SC2S_P3_btn"
        tools:text="Phase 3"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_below="@+id/SC2S_P2_btn"
        android:layout_alignStart="@+id/SC2S_P2_btn"/>

    <Button
        android:id="@+id/SC2S_P1_btn"
        tools:text="Phase 1"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <Button
        android:id="@+id/SC2S_P2_btn"
        tools:text="Phase 2"
        android:layout_height="40dp"
        android:layout_width="95dp"
        android:layout_below="@+id/SC2S_P1_btn"
        android:layout_alignStart="@+id/SC2S_P1_btn"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/button21"
        tools:text="Phase 1"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/SC2Sz_P2_btn"
        tools:text="Phase 2"
        android:layout_below="@+id/button18"
        android:layout_alignEnd="@+id/textView4"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/LF_P3_btn"
        tools:text="Phase 3"
        android:layout_below="@+id/button22"
        android:layout_alignStart="@+id/button22"/>

</RelativeLayout>

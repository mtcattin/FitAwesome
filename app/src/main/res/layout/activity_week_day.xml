<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_week_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.fitawesome.WeekDay">

    <Button
        android:text="Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/wed_btn" />

    <Button
        android:text="Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wed_btn"
        android:layout_alignStart="@+id/wed_btn"
        android:id="@+id/tues_btn" />

    <Button
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tues_btn"
        android:layout_alignStart="@+id/tues_btn"
        android:id="@+id/mon_btn" />

    <Button
        android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thurs_btn"
        android:layout_alignStart="@+id/thurs_btn"
        android:id="@+id/fri_btn" />

    <Button
        android:text="Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thurs_btn"
        android:layout_below="@+id/wed_btn"
        android:layout_alignStart="@+id/wed_btn" />

    <Button
        android:text="Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sun_btn"
        android:layout_above="@+id/mon_btn"
        android:layout_alignStart="@+id/mon_btn" />

    <Button
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sat_btn"
        android:layout_below="@+id/fri_btn"
        android:layout_alignStart="@+id/fri_btn" />
</RelativeLayout>

    <Button
        android:text="@string/create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/BtnCreateAccount"
        android:onClick="onButtonClick"
        android:textColor="@android:color/black"
        android:layout_below="@+id/BtnSignIn"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordMM"
        android:hint="@string/passwordMM"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/userNameMM"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/userNameMM"
        android:hint="@string/usernameMM"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/log_inMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnSignIn"
        android:layout_marginTop="56dp"
        android:onClick="onButtonClick"
        android:textColor="@android:color/black"
        android:layout_below="@+id/passwordMM"
        android:layout_centerHorizontal="true"/>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menuoption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.fitawesome.menuoption">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_log_btn"
        android:layout_below="@+id/workoutLog_btn"
        android:layout_alignEnd="@+id/workoutLog_btn"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/black"
        android:text="Progress Log"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/workoutLog_btn"
        android:layout_below="@+id/exercise_prg_btn"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="Workout Log "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_prg_btn"
        android:layout_marginTop="133dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="?attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:text="Exercise Program"
        android:layout_alignStart="@+id/workoutLog_btn"/>

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/MOuserNameET"
        android:layout_alignBottom="@+id/MOuserNameET"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/MOuserNameET"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/exercise_prg_btn"/>

</RelativeLayout>
